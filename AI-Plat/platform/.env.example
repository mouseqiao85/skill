# AI-Plat 平台环境配置示例

# 项目配置
PROJECT_NAME=AI-Plat
PROJECT_VERSION=0.1.0
ENVIRONMENT=development

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=True

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost/aiplat_db
DEV_DATABASE_URL=postgresql://postgres:password@localhost/aiplat_dev
PROD_DATABASE_URL=postgresql://postgres:password@prod-server/aiplat_prod
TEST_DATABASE_URL=postgresql://postgres:password@localhost/aiplat_test

# Redis配置
REDIS_URL=redis://localhost:6379

# 大模型配置
OPENAI_API_KEY=your-openai-api-key-here
OLLAMA_BASE_URL=http://localhost:11434

# 本体存储配置
FUSEKI_URL=http://localhost:3030
FUSEKI_DATASET=aiplat

# 图数据库配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# 消息队列配置
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# 路径配置
DATA_PATH=./data
MODELS_PATH=./models
ONTOLOGY_PATH=./ontology

# 安全配置
SECRET_KEY=change-this-to-a-random-secret-key-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 日志级别
LOG_LEVEL=INFO